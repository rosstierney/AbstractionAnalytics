@{
    ViewBag.Title = "Home Page";
}

<div id="main-div"  class="container-fluid" style="height:600px;">
    <div id="intro-text" class="layer">
    <div class="animated fadeInUp">We help businesses in Ireland and the UK to measure, monitor and reduce their energy cost, consumption and carbon footprint utilising best-in-class procurement, trading and energy management techniques</div>
    <br /><br />
        <div class="animated fadeInUpBig">
            <button class="mybutton" onclick="window.location.href = '#contact';">
                About Us
            </button>
        </div>
    </div>
    
</div>
<div id="services-div" class="container-fluid" style="height:600px;">
    <div id="service-text" class="col-md-4 dark-layer">
        <div class="animated fadeInRight">We help businesses in Ireland and the UK to measure, monitor and reduce their energy cost services</div>
        <br /><br />
        <div class="animated fadeInRightBig">
            <button class="mybutton" onclick="window.location.href = '#contact';">
                Our Services
            </button>
        </div>
    </div>

</div>
<div id="contact" class="container-fluid" style="height:600px;">
    <div class="col-md-4">

        <div class="col-md-12" style="margin-top:20%;">
            <h2 class="col-md-12 text-center box-header">Contact us</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @model AbstractionAnalytics.Models.Contact
                <div class="col-md-12 box">

                    <div class="col-md-2">
                        <span class="text-center"><i class="fa fa-2x fa-user bigicon"></i></span>
                    </div>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.fullname, new { placeholder = Html.DisplayNameFor(n => n.fullname) })
                        @Html.ValidationMessageFor(m => m.fullname, "", new { @class = "text-danger bg-danger" })
                    </div>
                    <div class="col-md-2">
                        <span class="text-center"><i class="fa fa-2x fa-envelope-o bigicon"></i></span>
                    </div>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.email, new { placeholder = Html.DisplayNameFor(n => n.email) })
                        @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger bg-danger" })
                    </div>
                    <div class="col-md-2">
                        <span class="text-center"><i class="fa fa-2x fa-map-marker bigicon"></i></span>
                    </div>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.city, new { placeholder = Html.DisplayNameFor(n => n.city) })
                        @Html.ValidationMessageFor(m => m.city, "", new { @class = "text-danger bg-danger" })
                    </div>
                    <div class="col-md-2">
                        <span class="text-center"><i class="fa fa-2x fa-phone-square bigicon"></i></span>
                    </div>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.telephone, new { placeholder = Html.DisplayNameFor(n => n.telephone) })
                        @Html.ValidationMessageFor(m => m.telephone, "", new { @class = "text-danger bg-danger" })
                    </div>

                    <div class="col-md-2">
                        <span class="text-center"><i class="fa fa-2x fa-pencil-square-o bigicon"></i></span>
                    </div>
                    <div class="col-md-10">
                        @Html.TextAreaFor(m => m.enquiry, new { placeholder = Html.DisplayNameFor(n => n.enquiry) })
                        @Html.ValidationMessageFor(m => m.enquiry, "", new { @class = "text-danger bg-danger" })<br>
                    </div>

                    <div class="col-md-10 col-md-offset-1 form-group">
                        <button id="btnContact" class="mybutton" type="submit"><span class="glyphicon glyphicon-send"></span>&nbsp;Send Message</button>
                    </div>
                </div>
            }
        </div>

    </div>
</div>

